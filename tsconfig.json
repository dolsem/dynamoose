{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"lib": ["es2015"],
		"target": "es6",
		"outDir": "dist",
		"allowJs": true,
		"sourceMap": false,
		"declaration": true,
		"noImplicitThis": true,
		"strict": false
	},
	"include": ["./lib/**/*"]
}
